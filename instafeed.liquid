{%- style -%}
  .instagram-feed-{{ section.id }} {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }
  
  .instagram-feed-{{ section.id }} .instagram-slider {
    position: relative;
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 60px;
  }
  
  .instagram-feed-{{ section.id }} .instagram-grid {
    display: flex;
    gap: {{ section.settings.grid_gap }}px;
    transition: transform 0.3s ease;
  }
  
  .instagram-feed-{{ section.id }} .instagram-item {
    position: relative;
    flex: 0 0 calc(25% - {{ section.settings.grid_gap | divided_by: 4 }}px);
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: {{ section.settings.border_radius }}px;
    transition: transform 0.3s ease;
  }
  
  .instagram-feed-{{ section.id }} .instagram-item:hover {
    transform: scale(1.05);
  }
  
  .instagram-feed-{{ section.id }} .instagram-image,
  .instagram-feed-{{ section.id }} .instagram-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .instagram-feed-{{ section.id }} .instagram-video {
    background-color: #000;
  }
  
  .instagram-feed-{{ section.id }} .instagram-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .instagram-feed-{{ section.id }} .instagram-item:hover .instagram-overlay {
    opacity: 1;
  }
  
  .instagram-feed-{{ section.id }} .instagram-icon {
    color: white;
    font-size: 24px;
  }
  
  .instagram-feed-{{ section.id }} .video-play-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-size: 48px;
    opacity: 0.8;
    pointer-events: none;
  }
  
  .instagram-feed-{{ section.id }} .section-header {
    text-align: center;
    margin-bottom: {{ section.settings.header_spacing }}px;
    padding: 0 20px;
  }
  
  .instagram-feed-{{ section.id }} .section-title {
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    color: {{ section.settings.title_color }};
    margin-bottom: 10px;
  }
  
  .instagram-feed-{{ section.id }} .section-subtitle {
    font-size: {{ section.settings.subtitle_size }}px;
    color: {{ section.settings.subtitle_color }};
    max-width: 600px;
    margin: 0 auto;
  }
  
  .instagram-feed-{{ section.id }} .instagram-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }
  
  .instagram-feed-{{ section.id }} .slider-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    background: {{ section.settings.nav_color }};
    color: {{ section.settings.nav_text_color }};
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
    transition: opacity 0.3s ease;
    z-index: 10;
  }
  
  .instagram-feed-{{ section.id }} .slider-nav:hover {
    opacity: 0.8;
  }
  
  .instagram-feed-{{ section.id }} .slider-nav.prev {
    left: 10px;
  }
  
  .instagram-feed-{{ section.id }} .slider-nav.next {
    right: 10px;
  }
  
  .instagram-feed-{{ section.id }} .slider-nav:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }
  
  .instagram-feed-{{ section.id }} .slider-pagination {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 30px;
  }
  
  .instagram-feed-{{ section.id }} .pagination-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: {{ section.settings.pagination_color }};
    opacity: 0.3;
    cursor: pointer;
    transition: opacity 0.3s ease;
  }
  
  .instagram-feed-{{ section.id }} .pagination-dot.active {
    opacity: 1;
  }
  
  .instagram-feed-{{ section.id }} .media-type-indicator {
    position: absolute;
    top: 10px;
    right: 10px;
    background: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
  }
  
  @media (max-width: 1024px) {
    .instagram-feed-{{ section.id }} .instagram-item {
      flex: 0 0 calc(33.333% - {{ section.settings.grid_gap | divided_by: 3 }}px);
    }
  }
  
  @media (max-width: 768px) {
    .instagram-feed-{{ section.id }} .instagram-slider {
      padding: 0 50px;
    }
    
    .instagram-feed-{{ section.id }} .instagram-item {
      flex: 0 0 calc(50% - {{ section.settings.grid_gap | divided_by: 2 }}px);
    }
    
    .instagram-feed-{{ section.id }} .instagram-grid {
      gap: {{ section.settings.grid_gap_mobile }}px;
    }
    
    .instagram-feed-{{ section.id }} .section-title {
      font-size: {{ section.settings.title_size_mobile }}px;
    }
    
    .instagram-feed-{{ section.id }} .section-subtitle {
      font-size: {{ section.settings.subtitle_size_mobile }}px;
    }
    
    .instagram-feed-{{ section.id }} .slider-nav {
      width: 35px;
      height: 35px;
      font-size: 16px;
    }
  }
{%- endstyle -%}

<div class="instagram-feed-{{ section.id }}">
  {% if section.settings.show_header %}
    <div class="section-header">
      {% if section.settings.title != blank %}
        <h2 class="section-title">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.subtitle != blank %}
        <p class="section-subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>
  {% endif %}
  
  <div class="instagram-slider">
    <button class="slider-nav prev" onclick="slideInstagram('{{ section.id }}', -1)">
      ‹
    </button>
    
    <div class="instagram-grid" id="instagram-grid-{{ section.id }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'instagram_post' %}
            <div class="instagram-item" {{ block.shopify_attributes }}>
              {% if block.settings.media_type == 'video' and block.settings.video != blank %}
                {% if block.settings.link != blank %}
                  <a href="{{ block.settings.link }}" class="instagram-link" target="_blank" rel="noopener">
                {% endif %}
                
                <video 
                  class="instagram-video"
                  {% if block.settings.autoplay %}autoplay muted loop{% endif %}
                  {% unless block.settings.autoplay %}poster="{{ block.settings.video_poster | image_url: width: 400 }}"{% endunless %}
                  controls
                >
                  <source src="{{ block.settings.video }}" type="video/mp4">
                  Your browser does not support the video tag.
                </video>
                
                <div class="media-type-indicator">VIDEO</div>
                
                {% if block.settings.link != blank %}
                  </a>
                {% endif %}
              {% elsif block.settings.image != blank %}
                {% if block.settings.link != blank %}
                  <a href="{{ block.settings.link }}" class="instagram-link" target="_blank" rel="noopener">
                {% endif %}
                
                <img 
                  src="{{ block.settings.image | image_url: width: 400 }}"
                  alt="{{ block.settings.image.alt | default: 'Instagram post' }}"
                  class="instagram-image"
                  loading="lazy"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
